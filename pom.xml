                                    <exclude>**/NOTICE.vm</exclude>
                                    <exclude>**/LICENSE.vm</exclude>
                                    <exclude>**/dependency-reduced-pom.xml</exclude>

                                    <!--
                                        Exclude internal repository. These files are 
                                        generated by Maven or only used for build purposes.
                                     -->
