                                    <exclude>README.txt</exclude>
                                    <exclude>BUILDRELEASE</exclude>
                                    <exclude>scripts/*.list</exclude>
                                    <exclude>scripts/*.options</exclude>
                                    <exclude>scripts/*.dict</exclude>

